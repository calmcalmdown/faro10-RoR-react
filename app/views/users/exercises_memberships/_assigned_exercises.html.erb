<h3>Assigned Exercises</h3>

<div class="table-responsive">
  <table id= "observers" cellpadding="0" cellspacing="0" border="0" class="dataTable table-striped table-hover table-highlight table-bordered"  >
    <thead>
      <tr>
        <th>Exercise Name</th>
        <th>Date Assigned</th>
        <th>Date Due</th>
      </tr>
    </thead>
    <tbody>
      <% assigned.each do |ex| %>
        <tr>
          <td><%= link_to "#{ex.longname}", assigned_exercise_path(ex) %></td>
          <td><%= ex.assigned %></td>
          <td><%= ex.due %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
