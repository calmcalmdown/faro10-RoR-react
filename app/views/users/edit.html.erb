<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :user_id %>
        <%= f.text_field :user_id, class: 'form-control' %>


        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :emergency_contact_name %>
        <%= f.email_field :emergency_contact_name, class: 'form-control' %>

        <%= f.label :emergency_contact_num %>
        <%= f.email_field :emergency_contact_num, class: 'form-control' %>


        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>


        <%= f.label :diagnosis %>
        <%= f.text_field :diagnosis, class: 'form-control'  %>

        <%= f.label :race %>
        <%= f.text_field :race, class: 'form-control'   %>

        <%= f.label :gender %>
        <%= f.text_field :gender, class: 'form-control'    %>


        <div class="form-group">
        <%= f.label :dob %>
        <%= f.date_field :dob %>
        </div>

        <%= f.label :weight %>
        <%= f.number_field :weight, class: 'form-control'  %>

          <%= f.label :occupation %>
          <%= f.text_field :occupation, class: 'form-control' %>

        <%= f.label :country %>
        <%= f.text_field :country, class: 'form-control' %>

        <%= f.label :zip_code %>
        <%= f.number_field :zip_code, class: 'form-control' %>

        <%= f.label :nationality %>
        <%= f.text_field :nationality, class: 'form-control' %>


        <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>


    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">change</a>
    </div>
  </div>
</div>
