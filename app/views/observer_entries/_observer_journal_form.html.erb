<div class="row" style="overflow:auto; height:300px; width:100%">
  <div class="box">
    <div class="icon">
      <div class="info" style="margin-left: 25px; background-color: white; border: none">

        <%= form_for(observer_entry) do |f| %>
            <% if observer_entry.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(observer_entry.errors.count, "error") %> prohibited this symptom from being saved:</h2>
                  <ul>
                    <% observer_entry.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>

            <br/>
            <div class="row">
              <div class="col-md-5">
                <div class="field">
                  <%= f.label :observation_id, 'Who are you observing?'  %><br>
                  <%= f.collection_select :observation_id, observations, :id, :observee, :autofocus => "autofocus", :class => "form-control"    %>
                </div>
              </div>
              <div class="col-md-7">
                <div class="field">
                  <%= f.label :observed_at, 'When'  %><br>
                  <%= f.date_select :observed_at, :class => "form-control"    %>
                </div>
              </div>
            </div>
            <br>

            <div class="form-group" style="margin: 7px">
              <%= f.label :journal %><br>
              <%= f.text_area :journal, size: "6x6", class: "form-control" %>
            </div>

            <div class="form-actions">
              <%= f.submit "Save", class: "btn btn-primary", style: "background-color: #326867; border-radius: 0" %>
            </div>
        <%end%>

      </div>
    </div>
  </div>
</div>
