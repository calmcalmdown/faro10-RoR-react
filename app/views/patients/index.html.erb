          <% end %>
          <li class="Complete"><a href="#inactiveClients" data-toggle="tab">Archive <span class="badge"><%= @memberships.inactive.count %></span></a></li>
        </ul>
      </div>
      <div class="panel-body">
        <div class="tab-content">
          <div class="tab-pane fade in active" id="activeClients">
            <%= render "patients/table", memberships: @memberships %>
          </div>
          <div class="tab-pane fade" id="inactiveClients">
            <%= render "patients/table_archived", memberships: @memberships %>
          </div>
        </div>
      </div>
    </div>
