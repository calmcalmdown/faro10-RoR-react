<div  id="mood-card" class="col-xs-6 col-md-1" style="min-width: 385px; min-height: 425px">
  <div class="dashboard-card" style="background-color: #B4D336;">
    <div class="card-header">
      <h1 class="card-header-text">Mood and<br/>Life Scale</h1>
    </div>
    <div class="card-menu">
      <%= image_tag('video_temp.png') %>
      <button class="card-video-button" type="button" data-toggle="modal" data-target="#moodInfoModal"><%= image_tag('help.png') %></button>
    </div>
    <div class="card-image">
      <button type="button" class="card-action-button" data-toggle="modal" data-target="#moodEntryModal"><%= image_tag('mood_smile.png')%></button>
    </div>
    <div class="card-notification">
      <a href="#moodAlert" data-toggle="collapse">
        <%if !@moodMessage.nil?%>
            <%=image_tag('alert.png', :title => @moodMessage)%>
        <%end%>
      </a>
    </div>
    <div id="moodAlert" class="collapse card-message">
      <%=@moodMessage%>
    </div>
    <div class="card-info">
      Total Entries: <%= @my_mood_entry_total %><br/>
      Avg Mood (0-6): <span id="user_feeling"></span><br/>
      Last Entry: <%= @last_mood_entry.present? ? @last_mood_entry.created_at.to_date.strftime("%m/%d/%Y") :"no updates made" %>
    </div>
    <div class="card-action-top">

    </div>
    <div class="card-action-middle">
      <button type="button" class="card-action-button" data-toggle="modal" data-target="#moodEntryModal">
        <%=image_tag('edit.png')%>
        <div class="card-action-text">
          MAKE<BR/>ENTRY
        </div>
      </button>
    </div>
    <div class="card-action-bottom">
      <button type="button" class="card-action-button" data-toggle="modal" data-target="#dashboardMoodChartModal">
        <%=image_tag('reports.png')%>
        <div class="card-action-text">
          <BR/>REPORTS
        </div>
      </button>
    </div>
  </div>
</div>

<div class="modal fade" id="moodEntryModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Mood Entry</h4>
      </div>
      <div class="modal-body">
        <%= render 'entries/mood_entries' %>
      </div>
    </div>
  </div>
</div>