<% if !@last_entry.present? || !@current_user.observers.exists? || !@my_journal.present? || !@current_user.prescriptions.present? || !ExercisesMembership.by_member(@current_user).present? || !@current_user.appointments.present? || !@current_user.memberships.active.any? %>
    <div style="width: 100%; text-align: center;">
      <div style="align-content: center; display: inline-block">
        <div width="100%"><h3 style="color: #556870;" align="center"><b>Steps to Success</b></h3></div>
        <div style="align-content: center; display: inline-block; margin: 2.5px 5px 2.5px 5px ">
          <div class="center image">
            <button type="button" class="card-action-button" data-toggle="modal" data-target="#moodEntryModal">
              <% if @my_mood_entry_total > 0 %>
                  <%= image_tag('Step 1 Success.png', style: 'height:100%;width:auto;') %>
              <% else %>
                  <%= image_tag('Step 1.png', style: 'height:100%;width:auto;') %>
              <% end %>
            </button>
          </div>
        </div>
        <div style="align-content: center; display: inline-block; margin: 2.5px 5px 2.5px 5px ">
          <div class="center image">
            <a href="/users/team">
              <% if @my_observers_count >0 %>
                  <%= image_tag('Step 2 Success.png', style: 'height:100%;width:auto;') %>
              <% else %>
                  <%= image_tag('Step 2.png', style: 'height:100%;width:auto;') %>
              <% end %>
            </a>
          </div>
        </div>
        <div style="align-content: center; display: inline-block; margin: 2.5px 5px 2.5px 5px ">
          <div class="center image">
            <button type="button" class="card-action-button" data-toggle="modal" data-target="#journalEntryModal">
              <% if @journal_entry_total >0 %>
                  <%= image_tag('Step 3 Success.png', style: 'height:100%;width:auto;') %>
              <% else %>
                  <%= image_tag('Step 3.png', style: 'height:100%;width:auto;') %>
              <% end %>
            </button>
          </div>
        </div>
        <div style="align-content: center; display: inline-block; margin: 2.5px 5px 2.5px 5px ">
          <div class="center image">
            <a href="/prescriptions">
              <% if @my_active_prescription_count > 0 %>
                  <%= image_tag('Step 4 Success.png', style: 'height:100%;width:auto;') %>
              <% else %>
                  <%= image_tag('Step 4.png', style: 'height:100%;width:auto;') %>
              <% end %>
            </a>
          </div>
        </div>
        <div style="align-content: center; display: inline-block; margin: 2.5px 5px 2.5px 5px ">
          <div class="center image">
            <%= link_to assigned_exercises_path(@current_user) do %>
                <% if @my_complete_exercises_count > 0 %>
                    <%= image_tag('Step 5 Success.png', style: 'height:100%;width:auto;') %>
                <% else %>
                    <%= image_tag('Step 5.png', style: 'height:100%;width:auto;') %>
                <% end %>
            <% end %>
          </div>
        </div>
        <div style="align-content: center; display: inline-block; margin: 2.5px 5px 2.5px 5px ">
          <div class="center image">
            <a href="<%= schedule_path(current_user) %>">
              <% if @my_appointment_count > 0 %>
                  <%= image_tag('Step 6 Success.png', style: 'height:100%;width:auto;') %>
              <% else %>
                  <%= image_tag('Step 6.png', style: 'height:100%;width:auto;') %>
              <% end %>
            </a>
          </div>
        </div>
        <div style="align-content: center; display: inline-block; margin: 2.5px 5px 2.5px 5px ">
          <div class="center image">
            <a href="/users/team">
              <% if @my_active_clinician_count > 0 %>
                  <%= image_tag('Step 7 Success.png', style: 'height:100%;width:auto;') %>
              <% else %>
                  <%= image_tag('Step 7.png', style: 'height:100%;width:auto;') %>
              <% end %>
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <br /><br /><br />
    </div>
<% end %>
