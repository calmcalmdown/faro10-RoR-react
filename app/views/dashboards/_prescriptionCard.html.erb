<div id="prescriptions-card" class="col-xs-6 col-md-1" style="min-width: 385px; min-height: 425px">
  <div class="dashboard-card" style="background-color: #4FA59F;">
    <div class="card-header">
      <h1 class="card-header-text">Prescriptions</h1>
    </div>
    <div class="card-menu">
      <%= image_tag('video_temp.png') %>
      <button type="button" class="card-video-button" data-toggle="modal" data-target="#prescriptionsModal"><%= image_tag('help.png') %></button>
    </div>
    <div class="card-image">
      <a href="/prescriptions" id="main_prescriptions"><%= image_tag('prescriptions.png')%></a>
    </div>
    <div class="card-notification">
    </div>
    <div class="card-info">
      <br/>
      Current Prescriptions: <%=@my_active_prescription_count %><br/>
      Last Date Taken: <%= @last_prescription_entry.present? ? @last_prescription_entry.day_taken.to_date.strftime("%m/%d/%Y") :"no updates made" %>
    </div>
    <div class="card-action-top">
      <button type="button" class="card-action-button" data-toggle="modal" data-target="#medicationEntryModal">
        <%=image_tag('edit.png')%>
        <div class="card-action-text">
          TAKE<BR/>PRESCRIPTION
        </div>
      </button>
    </div>

    <div class="card-action-middle">
      <a href="/prescriptions"><%=image_tag('manage.png')%>
        <div class="card-action-text">
          MANAGE<BR/>PRESCRIPTIONS
        </div>
      </a>
    </div>
    <div class="card-action-bottom">
      <button type="button" class="card-action-button" data-toggle="modal" data-target="#dashboardMedChartModal">
        <%=image_tag('reports.png')%>
        <div class="card-action-text">
          <BR/>REPORTS
        </div>
      </button>
    </div>
  </div>
</div>

<div class="modal fade" id="medicationEntryModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Mediction Entry</h4>
      </div>
      <div class="modal-body">
        <%= render 'entries/med_entries_new' %>
      </div>
    </div>
  </div>
</div>