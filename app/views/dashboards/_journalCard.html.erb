<div id="journal-card" class="col-xs-6 col-md-1" style="min-width: 385px; min-height: 425px">
  <div class="dashboard-card" style="background-color: #8CD2CB;">
    <div class="card-header">
      <h1 class="card-header-text">My Journal</h1>
    </div>
    <div class="card-menu">
      <%= image_tag('video_temp.png') %>
      <button type="button" class="card-video-button" data-toggle="modal" data-target="#journalInfoModal"><%= image_tag('help.png') %></button>
    </div>
    <div class="card-image">
      <button type="button" class="card-action-button" data-toggle="modal" data-target="#journalEntryModal"><%= image_tag('journal.png')%></button>
    </div>
    <div class="card-notification">
      <a href="#journalAlert" data-toggle="collapse">
        <%if !@journalMessage.nil?%>
            <%=image_tag('alert.png', :title => @journalMessage)%>
        <%end%>
      </a>
    </div>
    <div id="journalAlert" class="collapse card-message">
      <%=@journalMessage%>
    </div>
    <div class="card-info">
      <br/>
      Journal Entries: <%=@journal_entry_total%><br/>
      Last Entry: <%= @last_journal_entry.present? ? @last_journal_entry.updated_at.to_date.strftime("%m/%d/%Y") :"no entries made" %>
    </div>
    <div class="card-action-top">
      <%=image_tag('spacer.png')%>
      <div class="card-action-text">

      </div>
    </div>
    <div class="card-action-middle">
      <button type="button" class="card-action-button" data-toggle="modal" data-target="#journalEntryModal">
        <%=image_tag('edit.png')%>
        <div class="card-action-text">
          MAKE<BR/>ENTRY
        </div>
      </button>
    </div>
    <div class="card-action-bottom">
      <button type="button" class="card-action-button" data-toggle="modal" data-target="#myJournalModal"><%= image_tag('view journal.png') %>
        <div class="card-action-text">
          VIEW<BR/>JOURNAL
        </div>
      </button>
    </div>
  </div>
</div>

<div class="modal fade" id="journalEntryModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Journal Entry</h4>
      </div>
      <div class="modal-body">
        <%= render 'entries/journal_entries_form' %>
      </div>
    </div>
  </div>
</div>