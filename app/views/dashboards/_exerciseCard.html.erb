<div id="exercises-card" class="col-xs-6  col-md-1" style="min-width: 385px; min-height: 425px">
  <div class="dashboard-card" style="background-color: #f1ce20">
    <div class="card-header">
      <h1 class="card-header-text">Exercises</h1>
    </div>
    <div class="card-menu">
      <%= image_tag('video_temp.png') %>
      <button type="button" class="card-video-button" data-toggle="modal" data-target="#exercisesInfoModal"><%= image_tag('help.png') %></button>
    </div>
    <div class="card-image">
      <a href="/assigned_exercises.<%=@current_user.id%>"><%= image_tag('exercises.png')%></a>
    </div>
    <div class="card-notification">
      <a href="#exercisesAlert" data-toggle="collapse">
        <%if !@exercisesMessage.nil?%>
            <%=image_tag('alert.png', :title => @exercisesMessage)%>
        <%end%>
      </a>
    </div>
    <div id="exercisesAlert" class="collapse card-message">
      <%=@exercisesMessage%>
    </div>
    <div class="card-info">
      <br/>
      Completed Exercises: <%=@my_complete_exercises_count%><br/>
      Assigned Exercises: <%=@my_incomplete_exercises_count%>
    </div>
    <div class="card-action-top">
      <%=image_tag('spacer.png')%>
      <div class="card-action-text">

      </div>
    </div>
    <div class="card-action-middle">
      <%=image_tag('spacer.png')%>
      <div class="card-action-text">

      </div>
    </div>
    <div class="card-action-bottom">
      <a href="/assigned_exercises.<%=@current_user.id%>"><%=image_tag('edit.png')%>
        <div class="card-action-text">
          COMPLETE<BR/>EXERCISES
        </div>
      </a>
    </div>
  </div>
</div>
