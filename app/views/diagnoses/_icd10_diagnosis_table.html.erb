<div class="row">
  <div class="col-md-12">
    <table id="icd" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-hover table-highlight table-bordered">
      <thead>
      <tr>
        <!--<th style="width:10%">ID</th>-->
        <!--<th style="width:10%">Member ID</th>-->
        <!--<th style="width:10%">DSM5 ID</th>-->
        <th style="width:10%">Code</th>
        <th style="width:50%">ICD10 Description</th>
        <th style="width:20%">Actions</th>
      </tr>
      </thead>

      <tbody>
      <% if @icd_diagnoses.present?  %>
        <% @icd_diagnoses.each do |icd_diagnosis| %>
            <tr>

              <td><%= icd_diagnosis.medical_condition.icd10_code %></td>
              <td><%= icd_diagnosis.medical_condition.short_description %></td>
              <td>
                <%= link_to 'Remove', icd_diagnosis, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

