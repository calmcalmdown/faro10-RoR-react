              <% @meeting.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
  <div class="row">
    <div class="panel" style="border: 1px solid; border-radius: 0; border-color: lightgrey; background-color: #326867; margin-top: -10px ">
      <div class="panel-body text-center">
        <p style="font-size: 28px; text-align: left; margin: 4px; margin-bottom: 10px; margin-top: 10px; color: white ">
          Update my Meeting
        </p>
      </div>
    </div>
  </div>
    <br>
  <div class="row">
    <!--<div class="row">-->
      <!--<div class="col-md-6 col-md-offset-4">-->
        <!--<div class="col-md-2" style="min-width: 200px;  max-width: 500px">-->
          <!--<= f.label :start_time, "Date" %><br>-->
             <!--<= f.text_field :date, 'data-behaviour' => 'datepicker', value: (f.object.start_time.present? ? f.object.start_time.strftime("%A, %B %d")  : nil), class: "form-control" %>-->
        <!--</div>-->
        <!--<div class="col-md-2" style="max-width: 150px; margin-left: -20px  ">-->
          <!--<= f.label :start_time, "Time" %><br>-->
          <!--<= f.select :time, options_for_select([["12:00 AM", "00:00:00.000000"], ["12:30 AM"], ["1:00 AM"], ["1:30 AM"], ["2:00 AM"], ["2:30 AM"], ["3:00 AM"], ["3:30 AM"], ["4:30 AM"], ["5:00 AM"], ["5:30 AM"],-->
                                                  <!--["6:00 AM", "06:00:00"], ["6:30 AM", "06:30:00"], ["7:00 AM", "07:00:00"], ["7:30 AM"], ["8:00 AM"], ["8:30 AM"], ["9:00 AM"], ["9:30 AM"], ["10:00 AM"], ["10:30 AM"], ["11:00 AM"], ["11:30 AM"],-->
