      <!--</div>-->
    <!--</div>-->


    <div class="row">
      <div class="col-md-2 col-md-offset-4">
        <div class="field" style="margin-left: 15px">
          <%= f.label :status, "Meeting Status" %><br>
          <%= f.select :status, options_for_select(["in-progress", "scheduled", "complete"], @meeting.status), {}, class: "form-control" %><br>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-md-6 col-md-offset-4" >
        <div class="field" style="margin-left: 15px">
          <%= f.label :start_time %><br>
          <%= Time.use_zone(current_user.time_zone) do f.datetime_select(:start_time, :minute_step => 15, ampm: true) end %>

        </div>
        <br>
      </div>
    </div>



      <br>
    <div class="row">
      <div class="col-md-7 col-md-offset-4">
        <div class="col-md-3">
          <div class="field">
            <%= f.label :meeting_type, "Meeting Type" %><br>
            <%= f.select :meeting_type, options_for_select(["Veteran Support","Substance Abuse", "Easting Disorder", "Suicide Loss", "Depression", "Care Giver Support", "Pregnancy Loss", "Other"], @meeting.meeting_type), {}, class: "form-control" %><br>
          </div>

          <div class="field">
            <%= f.label :meeting_name, "Meeting Name" %><br>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <br>
          <div class="field">
            <%= f.label :meeting_topic, "Meeting Topic" %><br>
            <%= f.text_field :topic, class: 'form-control' %>
          </div>
          <br>
          <div class="field">
            <%= f.label :special_focus, "Special Focus" %><br>
            <%= f.text_field :special_focus, class: 'form-control' %>
          </div>
          <br>
          </div>
        <div class="col-md-3 ">
          <div class="field">
            <%= f.label :duration %><br>
            <%= f.number_field :duration, class: 'form-control' %>
          </div>
          <br>
          <div class="field">
            <%= f.label :hosted_by, "Host Name" %><br>
            <%= f.text_field :host, value: @meeting.host, class: 'form-control' %>
          </div>
          <br><br>

          <div class="checkbox" id="meeting_privacy_group">
            <label>
              <br />
              <%= f.check_box :privacy %>
              <b> Private</b>
            </label>
          </div>
          <br><br>
          <div class="form group" id="meeting_password_group">
            <%= f.label :password %><br>
            <%= f.text_field :password, class: 'form-control' %>
          </div>
          <br>

          <br>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12" align="center" style="margin-top: 15px; margin-bottom: 15px">
      <div class="form-actions" id="save-form">
        <%= f.submit "Save changes", class: "button"%><br>
      </div>
      <% end %>
    </div>
  </div>

</div>

<style>
  .button {
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    border-radius: 0;
    border: 0;
    border-color: #F19A20;
    background-color: #F19A20;
    color: white;
    padding: 12px;
    padding-left: 16px;
    padding-right: 16px;
    box-shadow: 0 2px 6px 0 rgba(0,0,0,0.24), 0 2px 6px 0 rgba(0,0,0,0.19);
    height: 52px;
    width: 150px;

  }

  .button:hover {
    background-color: #d17f0d;
    color: white;
    box-shadow: 0 8px 12px 0 rgba(0,0,0,0.24), 0 6px 12px 0 rgba(0,0,0,0.19);

  }

  .button:active {
    background-color: #d17f0d;
    color: white;
    box-shadow: 0 4px #666;
    transform: translateY(4px);
