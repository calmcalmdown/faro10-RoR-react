<table id= 'meetingsScheduledTable' cellpadding="0" cellspacing="0" border="0" class="dataTable table-responsive table-striped table-hover table-highlight table-bordered"  >
  <thead>
  <tr id="meetingsScheduledTable">
    <th style="border-bottom-color: transparent; border: none; width: 25%  "></th>
    <th class="hidden-xs" style="border-bottom-color: transparent; border: none; width: 75%  ">Start or Join a Peer Support Meeting Now!</th>
    <th style="border-bottom-color: transparent; border: none; width: 5%  ">
      <div class="col-md-12 hidden-xs" align="center" >
        <button type="button"
                class="btn btn-primary"
                style="vertical-align: bottom; margin: 2%; padding: 10px; background-color: #F19A20; border-color: orange; border-radius: 0; float: right "
                data-toggle="modal"
                data-target="#scheduleMeetingModal">
          <b>Schedule Meeting</b>
        </button>
      </div>
    </th>
  </tr>
  </thead>
  <tbody>
  <% @meetings.scheduled.order("start_time desc").each do |meeting| %>
      <tr>
        <td style="width: 28%"><span style="font-size: large"> <%= time_zone_offset(meeting.start_time, current_user.time_zone,  "%A, %B %d") %></span><br>
          <%= time_zone_offset(meeting.start_time, current_user.time_zone,  "%I:%M %p") %><br>
          <%=  meeting.privacy.present?  ? "Private" : "" %>
        </td>
        <td style="width: 65%"><%= meeting.meeting_type %><br>
          <span style="font-size: large"><b><%= meeting.name %></b></span> <br>
          <%= meeting.topic %>
          <span style="font-size: small">   <%= meeting.special_focus %></span>
        </td>
        <td style="width: 7%">
          <span style="float: right">
          <%= link_to 'Edit', edit_meeting_path(meeting) %>
            <!--<= link_to 'Cancel', meeting, method: :delete, data: { confirm: 'Are you sure?' } %>-->
          </span>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

